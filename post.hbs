{{!< default}}

{{#post}}

  <article class="{{post_class}}">
    <div class="post-card">
      <div class="post-container">
        <div class="post-header">
          <div class="meta">
            <time datetime="{{date published_at format="YYYY MM DD"}}">{{date published_at timeago="true"}}</time>
            <span class="tags">{{tags prefix="in " separator=" "}}</span>
            <span class="reading-time"> ~ {{reading_time}}.</span>
          </div>
          <h1 id="post-title">
            {{{title}}}
          </h1>
          <div class="post-content">
            {{content}}
          </div>
        </div>
      </div>
    </div>
  </article>

{{/post}}